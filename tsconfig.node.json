{
	"compilerOptions": {
		"target": "ES2022",
		"lib": ["ES2023", "DOM"], // Node.js용 DOM 관련 라이브러리도 추가
		"module": "ESNext",
		"skipLibCheck": true,
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"isolatedModules": true,
		"moduleDetection": "force",
		"noEmit": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"outDir": "./dist", // 컴파일 결과 출력 디렉토리 설정
		"baseUrl": "./",
		"paths": {
			"@/*": ["./lib/*"]
		}
	},
	"include": ["vite.config.ts"]
}
